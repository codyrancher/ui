<LoadingBlock @waitUntilResolved={{asyncContent}} as |lb|>
    <lb.Loading>
        <NewSelect  
            @prompt={{prompt}}
            @optionValuePath={{optionValuePath}}
            @optionLabelPath={{optionLabelPath}}
            @optionGroupPath={{optionGroupPath}}
            @optionDisabledPath={{optionDisabledPath}}
            @value={{value}}
            @localizedPrompt={{localizedPrompt}}
            @localizedLabel={{localizedLabel}}
            @localizedHtmlLabel={{localizedHtmlLabel}}
            @disabled={{computedDisable}}
            @classNames={{computedClassnames}}
            @ungroupedContent={{ungroupedContent}}
            @groupedContent={{groupedContent}}
        />
        Loading
    </lb.Loading>
    <lb.Loaded>
        <NewSelect  
            @prompt={{prompt}}
            @optionValuePath={{optionValuePath}}
            @optionLabelPath={{optionLabelPath}}
            @optionGroupPath={{optionGroupPath}}
            @optionDisabledPath={{optionDisabledPath}}
            @value={{value}}
            @localizedPrompt={{localizedPrompt}}
            @localizedLabel={{localizedLabel}}
            @localizedHtmlLabel={{localizedHtmlLabel}}
            @disabled={{computedDisable}}
            @classNames={{computedClassnames}}
            @ungroupedContent={{ungroupedContent}}
            @groupedContent={{groupedContent}}
            @content={{lb.value}}
        />
        Loaded
    </lb.Loaded>
    <lb.Error>
        <NewSelect  
            @prompt={{prompt}}
            @optionValuePath={{optionValuePath}}
            @optionLabelPath={{optionLabelPath}}
            @optionGroupPath={{optionGroupPath}}
            @optionDisabledPath={{optionDisabledPath}}
            @value={{value}}
            @localizedPrompt={{localizedPrompt}}
            @localizedLabel={{localizedLabel}}
            @localizedHtmlLabel={{localizedHtmlLabel}}
            @disabled={{computedDisable}}
            @classNames={{computedClassnames}}
            @ungroupedContent={{ungroupedContent}}
            @groupedContent={{groupedContent}}
        />
        Error
    </lb.Error>
</LoadingBlock>